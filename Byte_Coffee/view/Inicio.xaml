                    <TextBlock Text="visión innovadora y su dedicación por la excelencia crean una" FontSize="20" TextAlignment="Center"/>
                    <TextBlock Text="experiencia única.  Es donde el café y la tecnología se unen para crear" FontSize="20" TextAlignment="Center"/>
                    <TextBlock Text=" momentos especiales." FontSize="20" TextAlignment="Center"/>
                </StackPanel>

                <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Width="394" Margin="0,357,0,0" Height="316" Panel.ZIndex="0">
                    <TextBlock Text="Contacto" FontSize="18" Margin="0,10,0,0" TextAlignment="Center" Foreground="#FF0097B2" FontFamily="Calisto MT" />
